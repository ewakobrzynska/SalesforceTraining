<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>STATUS001_Order_Update</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
    ISPICKVAL(Status, &quot;Activated&quot;),
    NOT(CONTAINS(Signature__c, &quot;data:image/png;base64,&quot;)) 
)</errorConditionFormula>
    <errorMessage>You cannot activate the order without the customer&apos;s signature.</errorMessage>
</ValidationRule>
