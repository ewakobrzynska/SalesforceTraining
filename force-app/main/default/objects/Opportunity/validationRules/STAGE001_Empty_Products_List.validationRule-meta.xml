<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>STAGE001_Empty_Products_List</fullName>
    <active>true</active>
    <errorConditionFormula>ISPICKVAL(StageName, &quot;Closed Won&quot;) &amp;&amp; NOT(HasOpportunityLineItem)</errorConditionFormula>
    <errorDisplayField>StageName</errorDisplayField>
    <errorMessage>You can&apos;t mark Opportunity as ‘Closed Won’ if the product list is empty.</errorMessage>
</ValidationRule>
