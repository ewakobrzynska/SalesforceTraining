    <fullName>INDUSTRY001_Required</fullName>
    <active>true</active>
    <description>Prevents saving the record if &apos;Industry&apos; is not provided.</description>
    <errorConditionFormula>NOT($Setup.Admin_Validation_Settings__c.Is_Admin_Validation_Excluded__c) &amp;&amp;
